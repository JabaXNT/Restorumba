<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    style="@style/ScreenBackground">

    <ImageButton
        android:id="@+id/link_to_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/ic_home"
        style="@style/IconColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/edit"
        style="@style/TextColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/link_to_order"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/link_to_order" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="320dp"
        android:layout_height="460dp"
        android:background="@drawable/rounded_rectangle_20_radius_shape"
        style="@style/CardBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        android:layout_marginTop="50dp">

        <ImageButton
            android:id="@+id/profile_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="39dp"
            android:background="@mipmap/ic_profile_picture_2_foreground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/name"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture" />

        <EditText
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:fontFamily="@font/nunito_semibold"
            android:hint="@string/user_name"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView29"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView29"
            android:singleLine="true"
            android:inputType="text"/>

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/phone"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView29"
            android:layout_marginTop="42dp"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:fontFamily="@font/nunito_semibold"
            android:hint="@string/user_phone"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView30"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView30"
            android:singleLine="true"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/email"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView30"
            android:layout_marginTop="42dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:fontFamily="@font/nunito_semibold"
            android:hint="@string/user_email"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView32"
            android:singleLine="true"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="31dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/password"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView32"
            android:layout_marginTop="42dp"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:fontFamily="@font/nunito_semibold"
            android:hint="@string/user_password"
            style="@style/TextColor"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView34"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView34"
            android:singleLine="true"
            android:inputType="textPassword"/>

        <ImageButton
            android:id="@+id/opened"
            android:visibility="gone"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/ic_eye_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/password"
            app:layout_constraintStart_toEndOf="@+id/password"
            android:layout_marginStart="10dp"/>

        <ImageButton
            android:id="@+id/closed"
            android:visibility="visible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="@mipmap/ic_eye_closed_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/password"
            app:layout_constraintStart_toEndOf="@+id/password"
            android:layout_marginStart="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/menu"
        android:layout_width="346dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_rectangle_20_radius_shape"
        style="@style/CardBackground">

        <TextView
            android:id="@+id/textView7"
            style="@style/TextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="@string/choose_avatar"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/close"
            style="@style/IconColor"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_cross"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:layout_marginStart="71dp"/>

        <ImageButton
            android:id="@+id/profile_picture_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="18sp"
            android:layout_marginTop="17dp"
            android:background="@mipmap/ic_profile_picture_2_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ImageButton
            android:id="@+id/profile_picture_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="11dp"
            android:background="@mipmap/ic_profile_picture_3_foreground"
            app:layout_constraintBottom_toBottomOf="@+id/profile_picture_2"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_2"
            app:layout_constraintTop_toTopOf="@+id/profile_picture_2"/>

        <ImageButton
            android:id="@+id/profile_picture_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="17dp"
            android:background="@mipmap/ic_profile_picture_4_foreground"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_3"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginStart="11dp"/>

        <ImageButton
            android:id="@+id/profile_picture_5"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="17dp"
            android:background="@mipmap/ic_profile_picture_5_foreground"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_4"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            android:layout_marginStart="11dp"/>

        <ImageButton
            android:id="@+id/profile_picture_6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="29dp"
            android:background="@mipmap/ic_profile_picture_6_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture_2"
            android:layout_marginStart="18dp"/>

        <ImageButton
            android:id="@+id/profile_picture_7"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="29dp"
            android:background="@mipmap/ic_profile_picture_7_foreground"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_6"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture_2"
            android:layout_marginStart="11dp"/>

        <ImageButton
            android:id="@+id/profile_picture_8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="29dp"
            android:background="@mipmap/ic_profile_picture_8_foreground"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_7"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture_2"
            android:layout_marginStart="11dp"/>

        <ImageButton
            android:id="@+id/profile_picture_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="29dp"
            android:background="@mipmap/ic_profile_picture_1_foreground"
            app:layout_constraintStart_toEndOf="@+id/profile_picture_8"
            app:layout_constraintTop_toBottomOf="@+id/profile_picture_2"
            android:layout_marginStart="11dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="62dp"
        android:text="@string/save"
        android:theme="@style/SmallText"
        app:cornerRadius="30dp"
        android:backgroundTint="#FF222C"
        android:paddingStart="38dp"
        android:paddingEnd="38dp"
        android:paddingTop="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>